<!DOCTYPE html>
<html>
  <head>
    <title>Disease Predictor</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <nav>
      <div class="navbar">
        <div class="logo">
          <div class="heart">❤︎</div>
          <div class="brand">SAC Hospitals</div>
        </div>
        <div class="nav-links">
          <a href="/" class="active">Home</a>
          <a href="/predict">Disease Predictor</a>
          <a href="/about">About Us</a>
        </div>
      </div>
    </nav>

    <div class="whole">
      <div class="p_box">
        <h1>Disease Prediction</h1>

        <form action="/predict" method="POST">
          <label>Enter symptoms (comma separated):</label>
          <input
            type="text"
            name="symptoms"
            placeholder="e.g., fever,cough,headache"
          />
          <button type="submit">Predict</button>
        </form>

        <% if (prediction) { %>
        <h2>Predicted Disease:</h2>
        <p>You may have :<%= prediction %></p>
        <% } %> <% if (precaution && precaution.length > 0) { %>
        <h3>Precautions must be taken are:</h3>
        <ul>
          <% precaution.forEach(function(item) { %>
          <li><%= item %></li>
          <% }) %>
        </ul>
        <% } %>
      </div>
    </div>
  </body>
</html>
